<section class="relative">
  <h1 class="text-2xl font-semibold mb-2">Index</h1>
  <p class="text-slate-600 dark:text-slate-300 mb-10">
    Your GPT chat. Shift+Enter = new line, Enter = new line, Ctrl+Enter = send.
  </p>

  <!-- Chat feed (same width as input: 60%) -->
  <div id="chat-feed-padding">
    <div id="chat-feed" class="max-w-[60%] mx-auto space-y-4"></div>
  </div>

  <!-- Floating input bar -->
  <div class="fixed left-1/2 -translate-x-1/2 bottom-6 w-3/5">
    <div class="rounded-2xl border border-slate-200 dark:border-slate-700 bg-white/90 dark:bg-slate-900/90 backdrop-blur shadow-lg">
      <div class="p-3">
        <div class="flex items-end gap-3">
          <!-- Attach -->
          <button id="attachBtn" class="shrink-0 p-2 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-800" title="Attach">
            <svg class="h-5 w-5 text-slate-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.7">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21.44 11.05l-8.49 8.49a5.25 5.25 0 01-7.42-7.42l8.5-8.5a3.5 3.5 0 115 5l-8.49 8.5a1.75 1.75 0 11-2.47-2.47l7.07-7.07"/>
            </svg>
          </button>

          <textarea id="chatInput" rows="3" placeholder="Message Atticus…" class="min-h-[72px] max-h-[200px] w-full resize-y p-3 rounded-xl bg-white dark:bg-slate-900 outline-none ring-1 ring-slate-200 dark:ring-slate-700 focus:ring-indigo-300 dark:focus:ring-indigo-600 text-[15px] leading-6"></textarea>

          <!-- Send -->
          <button id="sendBtn" class="shrink-0 px-3 py-2 rounded-xl bg-indigo-600 text-white hover:bg-indigo-700">
            <div class="flex items-center gap-2">
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor"><path d="M3.4 20.6l17.9-7.2a1 1 0 000-1.8L3.4 4.4a1 1 0 00-1.3 1.3L4.9 12l-2.8 6.3a1 1 0 001.3 1.3zM6.9 12l-2-4.5 12.6 4.5L4.9 16.5 6.9 12z"/></svg>
              <span class="hidden sm:inline">Send</span>
            </div>
          </button>
        </div>
        <div class="mt-2 text-xs text-slate-500 flex items-center justify-between px-1">
          <span>Shift+Enter = new line • Enter = new line • Ctrl+Enter = send</span>
          <span id="attachName" class="truncate max-w-[40%]"></span>
        </div>
      </div>
    </div>
  </div>

  <input type="file" id="fileInput" class="hidden" />
</section>
