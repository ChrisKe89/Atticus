{
  "root": true,
  "extends": ["next/core-web-vitals", "plugin:tailwindcss/recommended", "prettier"],
  "plugins": ["tailwindcss"],
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "clsx", "cva"],
      "classRegex": ["cva\\(([^)]*)\\)", "cn\\(([^)]*)\\)", "clsx\\(([^)]*)\\)"]
    }
  },
  "rules": {
    "@next/next/no-html-link-for-pages": "off",
    "tailwindcss/classnames-order": "off"
  }
}
